<div class="container mt-2">
    <div class="row">
        <div class="col-6">
            <h5>@CharacterLabel</h5>
            Status: @StatusText
            <img src="@Character.Image" width="250" />
        </div>
        <div class="col-6">
            <ul style="list-style-type:none">
                <li>Health: @Character.Health / @Character.MaxHealth</li>
                <li>Mana: @Character.Mana / @Character.MaxMana</li>
                <li>Combat: @Character.Combat</li>
                <li>Knavery: @Character.Knavery</li>
                <li>XP: @Character.XP</li>
                <li>Level: @Character.Level</li>
                <li>Item: None</li>
                <li>Worn: Ordinary Clothes</li>
            </ul>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public Character Character { get; set; }

    private string StatusText
    {
        get
        {
            if (Character.Statuses.Count == 0)
            {
                return "Good";
            }
            else
            {
                return string.Join(",", Character.Statuses);
            }
        }
    }

    private string CharacterLabel
    {
        get
        {
            if (Character.IsPlayer)
            {
                return Character.Name + " (You)";
            }
            else
            {
                return Character.Name;
            }
        }
    }
}
